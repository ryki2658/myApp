<% include partials/header_1 %>

  <div class="col-md-12" style="padding-top: 10px">
    <div class="row">
      <div class="well well-sm">
        <legend class="text-center"> <i class="fa fa-plus"></i>Add New Generator</legend>

        <form class="form-horizontal" action="/qr/generator/add" method="POST">
          <fieldset>
            
            <!-- Location body -->
            <div class="form-group">
              <label class="col-md-4">Location</label>
              <div class="col-md-12">
                <textarea class="form-control" name="qr1_location" readonly><%= info.qr1_location %></textarea>
              </div>
            </div>

            <!-- Details body -->
            <div class="form-group">
              <label class="col-md-4">Details</label>
              <div class="col-md-12">
                <textarea class="form-control" name="qr1_details" readonly><%= info.qr1_details %></textarea>
              </div>
            </div>

            <!-- Oil type body -->
            <div class="form-group">
              <div class="col-md-6">
                <label for="qr1_oil">Oil Type</label>
                <textarea class="form-control" name="qr1_oil" type="text" placeholder="Generator oil type and weight..."></textarea>
              </div>
              <div class="col-md-6">
                <label for="qr1_oilQ">Quantity</label>
                <textarea class="form-control" name="qr1_oilQ" placeholder="Generator oil capcity..."></textarea>
              </div>
            </div>

             <!-- Filter input -->
             <div class="form-group">
              <div class="col-md-6">
                <label for="qr1_filter">Oil Filter</label>
                <input class="form-control" name="qr1_filter" placeholder="Oil filter part number...">
              </div>
              <div class="col-md-6">
                <label for="qr1_fuelFilter">Fuel Filter</label>
                <input class="form-control" name="qr1_fuelFilter" placeholder="Fuel filter part number">
              </div>
            </div>

            <!-- Fuel/Coolant OK/LOW -->
            <div class="form-group">
              <div class="col-md-12">            
                <div class="col-md-6">
                  <label for="qr1_fuelStatus">Fuel Status</label>
                  <input type="radio" name="qr1_fuelStatus" value=FULL> FULL <br>                 
                  <input type="radio" name="qr1_fuelStatus" value=OK> OK <br>
                  <input type="radio" name="qr1_fuelStatus" value=LOW> LOW <br>
                </div>
                <div class="col-md-6 ">
                  <label for="qr1_coolantStatus">Coolant Status</label>
                  <input type="radio" name="qr1_coolantStatus" value=FULL> FULL <br>                 
                  <input type="radio" name="qr1_coolantStatus" value=LOW> LOW <br>
                </div>  
              </div>
            </div>

            <!-- Notes -->
            <div class="form-group">
              <label class="col-md-4">Alarms/Repairs/Notes</label>
              <div class="col-md-12">
                <textarea class="form-control" name="qr1_notes" placeholder="notes..." rows="10"></textarea>
              </div>
            </div>

            <!-- Form actions -->
            <div class="form-group">
              <div class="col-md-12 text-right">
                <button type="submit" value="execute">Submit</button>
              </div>
            </div>
          </fieldset>
        </form>
      </div>
    </div>
  </div>
</div>

<% include partials/footer %>