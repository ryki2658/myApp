<% include partials/header_1 %>

  <div class="col-md-12" style="padding-top: 10px">
    <div class="row">
      <div class="well well-sm">
        <legend class="text-center"> <i class="fa fa-plus"></i>Add New AHU</legend>

        <form class="form-horizontal" action="/qr/ahu/add" method="POST">
          <fieldset>
            
            <!-- Location body -->
            <div class="form-group">
              <label class="col-md-4">Location</label>
              <div class="col-md-12">
                <textarea class="form-control" name="qr1_location" readonly><%=info.qr1_location %></textarea>
              </div>
            </div>

            <!-- Details body -->
            <div class="form-group">
              <label class="col-md-4">Details</label>
              <div class="col-md-12">
                <textarea class="form-control" name="qr1_details" readonly><%=info.qr1_details %></textarea>
              </div>
            </div>

            <!-- Belt Status-->
            <div class="form-group">
              <div class="col-md-6">
                <label for="qr1_beltSize">Belt Size</label>
                <input class="form-control" name="qr1_beltSize" placeholder="Belt Size and number...">
              </div>
              <div class="col-md-6">
                <label for="qr1_beltStatus">Belt Condition</label>
                <input type="radio" name="qr1_beltStatus" value=NEW> NEW <br>                 
                <input type="radio" name="qr1_beltStatus" value=OK> OK <br>
                <input type="radio" name="qr1_beltStatus" value=POOR> POOR <br>
              </div>
            </div>

             <!-- AHU filter/motor greased -->
             <div class="form-group">
              <div class="col-md-6">
                <label for="qr1_filterSize">Filter Size</label>
                <input class="form-control" name="qr1_filterSize" placeholder="Filter Dimensions...">
              </div>
              <div class="col-md-6">
                <label for="qr1_filterQ">Filter Quantity</label>
                <input class="form-control" name="qr1_filterQ" type="number" min="1" max="100" placeholder="Number of Filters Needed...">
              </div> 
              <div class="col-md-6">
                <label for="qr1_filterStatus">Filter Status</label>
                <input type="radio" name="qr1_filterStatus" value=NEW> NEW <br>                 
                <input type="radio" name="qr1_filterStatus" value=OK> OK <br>
                <input type="radio" name="qr1_filterStatus" value=DIRTY> DIRTY <br>
              </div>
              <div class="col-md-6 ">
                <label for="qr1_motorGreased">Motor Greased</label>
                <input type="radio" name="qr1_motorGreased" value=YES> YES <br>                 
                <input type="radio" name="qr1_motorGreased" value=NO> NO <br>
              </div>  
            </div>

            <!-- Notes -->
            <div class="form-group">
              <label class="col-md-4">Notes/Assessment of Unit</label>
              <div class="col-md-12">
                <textarea class="form-control" name="qr1_notes" placeholder="notes reguarding units condition..." rows="10"></textarea>
              </div>
            </div>

            <!-- Form actions -->
            <div class="form-group">
              <div class="col-md-12 text-right">
                <button type="submit" value="execute">Submit</button>
              </div>
            </div>
          </fieldset>
        </form>
      </div>
    </div>
  </div>
</div>

<% include partials/footer %>
  