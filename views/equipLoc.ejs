<% include partials/header_1 %>
<!-- Equipment Locations -->

<header class="w3-container" style="padding-top: 20px;">
	<h4 class="text-center"><b><i class="fa fa-truck"></i> Equipment Locations</b></h4>
	<h6 class="text-center">(click on item to edit)</h6>
</header>
<br>
<div class="col-md-12">
	<div class="row">
		<div class="content-box-large">
			<form id="tableID" action="/equipLoc/edit" method="POST">
		       	<div class="col-md-12">
  					<div class="panel-body">
  						<table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="example">
							<thead>
								<th style="display: none;">ID</th>
						        <th>Equipment</th>
						        <th>Location</th>
						        <th>Details</th>
						        <th>Dropped off</th>
							</thead>
							<tbody>
								<% equipment.forEach(function(e){ %>
									<tr>
										<td style="display: none;"><%= e._id %></td>
										<td><%= e.equipment %></a></td>
										<td><%= e.equipment_location %></td>
										<td><%= e.equipment_details %></td>
										<td><%= e.equipment_date %></td>
									</tr>
								<% }) %>
							</tbody>
						</table>
						<textarea style="display: none;" id="t_id" name="editID">test</textarea>
						<div class="text-right" >
							<a href="../createEquipment">
			                	<button type="button"><i class="fa fa-plus"></i>Add New Equip</button>
			                </a>
						</div>
					</div>
				</div>
			</form>
		</div>
	</div>
</div>
<script src="../vendors/datatables/js/rowHandlers.js"></script>
<% include partials/footer %>